<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Matricula"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMatricula"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nome :"
        app:layout_constraintStart_toStartOf="@+id/editMatricula"
        app:layout_constraintTop_toBottomOf="@+id/editMatricula" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Endereco - Rua:"
        app:layout_constraintStart_toStartOf="@+id/editNome"
        app:layout_constraintTop_toBottomOf="@+id/editNome" />

    <EditText
        android:id="@+id/editRua"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Numero"
        app:layout_constraintStart_toStartOf="@+id/editRua"
        app:layout_constraintTop_toBottomOf="@+id/editRua" />

    <EditText
        android:id="@+id/editNumero"
        android:layout_width="411dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Complemento - ( OBS ):"
        app:layout_constraintStart_toStartOf="@+id/editNumero"
        app:layout_constraintTop_toBottomOf="@+id/editNumero" />

    <EditText
        android:id="@+id/editComplemento"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Numeo - PA"
        app:layout_constraintStart_toStartOf="@+id/editComplemento"
        app:layout_constraintTop_toBottomOf="@+id/editComplemento" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="8dp"
        android:text="Numero - Ramal"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/editComplemento" />

    <EditText
        android:id="@+id/editPaNumero"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editRamal"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/editPaNumero"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Modelo - ThinClient"
        app:layout_constraintStart_toStartOf="@+id/editComplemento"
        app:layout_constraintTop_toBottomOf="@+id/editPaNumero" />

    <EditText
        android:id="@+id/editModelo"
        android:layout_width="573dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="575dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="     # Dados Usuarios :"
        app:layout_constraintTop_toBottomOf="@+id/editModelo"
        tools:layout_editor_absoluteX="13dp" />

    <ListView
        android:id="@+id/LvDadosUsuarios"
        android:layout_width="579dp"
        android:layout_height="347dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btnBusca"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="BUSCAR"
        app:layout_constraintBottom_toBottomOf="@+id/editMatricula"
        app:layout_constraintStart_toEndOf="@+id/editMatricula"
        app:layout_constraintTop_toTopOf="@+id/editMatricula"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSalva"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="SALVAR"
        app:layout_constraintBottom_toBottomOf="@+id/editNome"
        app:layout_constraintStart_toEndOf="@+id/editNome"
        app:layout_constraintTop_toTopOf="@+id/editNome"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnLimpa"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="LIMPAR"
        app:layout_constraintBottom_toBottomOf="@+id/editRua"
        app:layout_constraintStart_toEndOf="@+id/editRua"
        app:layout_constraintTop_toTopOf="@+id/editRua"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="REMOVE"
        app:layout_constraintBottom_toBottomOf="@+id/editNumero"
        app:layout_constraintStart_toEndOf="@+id/editNumero"
        app:layout_constraintTop_toTopOf="@+id/editNumero"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="8dp"
        android:text="Bairro :"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/editNumero" />

    <EditText
        android:id="@+id/editBairro"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/editComplemento"
        app:layout_constraintStart_toEndOf="@+id/editComplemento"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>